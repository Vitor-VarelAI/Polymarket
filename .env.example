# =====================================================
# ExaSignal - Configuration File
# =====================================================
# Copy this file to .env and fill in your API keys
# cp .env.example .env
# =====================================================

# =====================================================
# ü§ñ TELEGRAM BOT (REQUIRED)
# =====================================================
# Create a bot at @BotFather on Telegram
# Get the token and paste here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here


# =====================================================
# üß† AI / LLM (REQUIRED)
# =====================================================
# Groq - FREE, fast inference with Llama 3.3
# Get key at: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here


# =====================================================
# üì∞ NEWS APIs (RECOMMENDED - all have free tiers)
# =====================================================

# NewsAPI - 100 requests/day free
# Get key at: https://newsapi.org
NEWSAPI_KEY=your_newsapi_key_here

# Finnhub - 60 requests/min, real-time news + sentiment
# Get key at: https://finnhub.io
FINNHUB_API_KEY=your_finnhub_api_key_here

# Brave Search - 2000 queries/month free
# Get key at: https://brave.com/search/api
BRAVE_API_KEY=your_brave_api_key_here


# =====================================================
# üå¶Ô∏è WEATHER APIs (OPTIONAL - for Weather Scanner)
# =====================================================
# All are FREE and improve forecast accuracy
# The system works with just one, but more = better consensus

# Tomorrow.io - 500 calls/day free (BEST accuracy)
# Get key at: https://www.tomorrow.io
TOMORROW_API_KEY=your_tomorrow_api_key_here

# OpenWeatherMap - 1000 calls/day free
# Get key at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# WeatherAPI.com - 1M calls/month free
# Get key at: https://www.weatherapi.com
WEATHERAPI_KEY=your_weatherapi_key_here


# =====================================================
# üîç RESEARCH APIs (OPTIONAL - fallback sources)
# =====================================================

# Exa API - Semantic search (has paid tier, optional)
# Only used as fallback when free sources return <5 results
# Get key at: https://exa.ai
EXA_API_KEY=your_exa_api_key_here
USE_EXA_FALLBACK=false
MIN_FREE_RESULTS=5


# =====================================================
# üêã POLYMARKET CLOB API (OPTIONAL - for whale tracking)
# =====================================================
# Required only for whale tracking features
# Export your private key from MetaMask:
# Settings > Security > Reveal Secret Recovery Phrase
POLYMARKET_PRIVATE_KEY=0x_your_metamask_private_key_here


# =====================================================
# ‚öôÔ∏è SYSTEM CONFIGURATION
# =====================================================

# Minimum score to generate alert (0-100)
SCORE_THRESHOLD=70

# How often NewsMonitor runs (seconds)
POLLING_INTERVAL_SECONDS=300

# Maximum alerts per day per user
MAX_ALERTS_PER_DAY=2

# Cooldown between alerts for same market (hours)
COOLDOWN_HOURS=24


# =====================================================
# üìä LOGGING & DATABASE
# =====================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# SQLite database path
DATABASE_PATH=exasignal.db
