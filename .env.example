# ===========================================
# ExaSignal - Configuração de Ambiente
# ===========================================

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# APIs de Pesquisa (Estratégia Híbrida - GRÁTIS)
NEWSAPI_KEY=your_newsapi_key_here

# Brave Search (GRÁTIS - 2000 queries/mês) - HIGH PRIORITY
BRAVE_API_KEY=your_brave_api_key_here

# Finnhub (Real-time news + Twitter sentiment) - FREE
FINNHUB_API_KEY=your_finnhub_api_key_here

# Exa API (Opcional - Backup quando < 5 resultados grátis)
EXA_API_KEY=your_exa_api_key_here
USE_EXA_FALLBACK=false
MIN_FREE_RESULTS=5

# LLM API (Groq - GRÁTIS com Llama 3.3)
GROQ_API_KEY=your_groq_api_key_here

# Polymarket CLOB API (Para Whale Tracking)
# Obtém a private key no MetaMask: Settings > Security > Reveal Secret Recovery Phrase
POLYMARKET_PRIVATE_KEY=0x_your_metamask_private_key_here

# Configurações do Sistema
SCORE_THRESHOLD=70
POLLING_INTERVAL_SECONDS=300
MAX_ALERTS_PER_DAY=2
COOLDOWN_HOURS=24

# Logging
LOG_LEVEL=INFO

# Database
DATABASE_PATH=exasignal.db

# ===========================================
# Weather APIs (for Weather Value Scanner)
# ===========================================

# Tomorrow.io (500 calls/day free) - Best accuracy
# Get key at: https://www.tomorrow.io
TOMORROW_API_KEY=your_tomorrow_api_key_here

# OpenWeatherMap (1000 calls/day free) - Global coverage
# Get key at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# WeatherAPI.com (1M calls/month free) - Very accurate
# Get key at: https://www.weatherapi.com
WEATHERAPI_KEY=your_weatherapi_key_here
